{
  "name": "ts_workspace",
  "version": "1.0.0",
  "description": "practice monorepo ts",
  "main": "index.js",
  "scripts": {
    "start:app_a": "npm run build && node ./dist/app_a/bin/www.js",
    "start:watch:app_a": "nodemon dist/app_a/bin/www.js",
    "start:watch:app_b": "nodemon dist/app_b/bin/www.js",
    "start:watch:app_c": "nodemon dist/app_c/src/bin/www.js",
    "start:dev:app_a": "tsc-watch --onSuccess \"node ./dist/app_a/bin/www.js\"",
    "start:dev:app_b": "tsc-watch --onSuccess \"node ./dist/app_b/bin/www.js\"",
    "start:dev:app_c": "tsc-watch --onSuccess \"node ./dist/app_c/src/bin/www.js\"",
    "start:dev:app_a:env": "node watch_app_a.js",
    "build:watch": "tsc -w",
    "build:watch:packages:a": "cd packages/a && tsc -w",
    "build:watch:packages:b": "cd packages/b && tsc -w",
    "build:watch:packages:c": "cd packages/c && tsc -w",
    "build": "tsc",
    "build:clean": "npm run clean && npm run build",
    "build:packages": "node build_packages.js",
    "clean": "rimraf ./dist",
    "clean:dependencies": "rimraf ./node_modules",
    "lint": "eslint . --ext=.ts",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "mocha -r ts-node/register ./**/*.test.ts --recursive",
    "test:coverage": "nyc npm run test",
    "test:parallel": "mocha --parallel -r ts-node/register ./**/*.spec.ts --recursive",
    "test:src": "mocha -r ts-node/register test/**/*.test.ts --recursive",
    "test:packages": "mocha -r ts-node/register packages/**/*.test.ts --recursive",
    "test:packages:a": "mocha -r ts-node/register packages/a/**/*.test.ts --recursive",
    "test:packages:b": "mocha -r ts-node/register packages/b/**/*.test.ts --recursive",
    "test:apps": "mocha -r ts-node/register apps/**/*.test.ts --recursive",
    "test:apps:app_a": "mocha -r ts-node/register apps/app_a/**/*.test.ts --recursive",
    "test:apps:app_b": "mocha -r ts-node/register apps/app_b/**/*.test.ts --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magocod/ts_workspace.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/magocod/ts_workspace/issues"
  },
  "homepage": "https://github.com/magocod/ts_workspace#readme",
  "workspaces": [
    "packages\\a",
    "packages\\b",
    "packages\\c"
  ],
  "dependencies": {
    "@ts_workspace/a": "./packages/a",
    "@typescript-eslint/parser": "^5.32.0",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.4",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "chai": "^4.3.6",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "shelljs": "^0.8.5",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  }
}
