{
  "name": "ts_workspace",
  "version": "1.0.0",
  "description": "practice monorepo ts",
  "main": "index.js",
  "scripts": {
    "start:app_a": "npm run build && node ./dist/apps/app_a/bin/www.js",
    "start:app_b": "npm run build && node ./dist/apps/app_b/bin/www.js",
    "build": "tsc",
    "build:clean": "npm run clean && npm run build",
    "clean": "rimraf ./dist",
    "clean:dependencies": "rimraf ./node_modules",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:src": "jest --testPathPattern=ts_workspace/test",
    "test:packages": "jest --testPathPattern=/packages",
    "test:a": "jest --testPathPattern=/packages/a",
    "test:b": "jest --testPathPattern=/packages/b",
    "test:apps": "jest --testPathPattern=/apps",
    "test:apps:app_a": "jest --testPathPattern=/apps/app_a",
    "test:apps:app_b": "jest --testPathPattern=/apps/app_b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magocod/ts_workspace.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/magocod/ts_workspace/issues"
  },
  "homepage": "https://github.com/magocod/ts_workspace#readme",
  "workspaces": [
    "packages\\a",
    "packages\\b",
    "apps\\app_a",
    "apps\\app_b"
  ],
  "dependencies": {
    "@ts_workspace/a": "./packages/a",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "express": "^4.18.1",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.4",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.3",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
